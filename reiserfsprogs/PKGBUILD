
pkgname=reiserfsprogs
pkgver=3.6.26
pkgrel=1
pkgdesc="Reiserfs utilities"
arch=('x86_64')
url="https://www.kernel.org/pub/linux/utils/fs/reiserfs/README"
license=('GPL')
groups=('base')
depends=('util-linux')
source=("https://www.kernel.org/pub/linux/kernel/people/jeffm/reiserfsprogs/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('1579221fcb0246be60abac056f783661')

build() {
  cd ${pkgname}-${pkgver}
  
  autoreconf -vi
  ./configure --prefix=/usr --sbindir=/sbin
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
