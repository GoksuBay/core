
pkgname=bdf-unifont
pkgver=6.2.20130831
pkgrel=1
pkgdesc="GNU Unifont Glyphs"
arch=('x86_64')
license=('custom' 'GPL2')
url="http://unifoundry.com/unifont.html"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=unifont.install
source=('http://unifoundry.com/unifont-6.2.20130831.bdf.gz'
        'LICENSE')
md5sums=('9052298ffe6488b7d5565beb4b020140'
         '64da5a96d6789d29d485cd67a43bc547')

package() {
  install -Dm644 ${srcdir}/unifont-6.2.20130831.bdf \
	${pkgdir}/usr/share/fonts/misc/unifont.bdf

  install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

