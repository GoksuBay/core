
pkgname=gnutls
pkgver=3.4.4
_pkgver=3.4.4
pkgrel=1
pkgdesc="Secure communications library implementing the SSL, TLS and DTLS protocols and technologies around them"
arch=('x86_64')
license=('GPL3' 'LGPL')
url="http://www.gnu.org/software/gnutls/"
install=gnutls.install
options=('libtool')
depends=('gcc-libs' 'libtasn1>=3.6' 'readline' 'zlib' 'texinfo' 'nettle' 'p11-kit')
makepends=('datefudge' 'valgrind' 'strace' 'autogen')
source=("ftp://ftp.gnutls.org/gcrypt/gnutls/v3.4/${pkgname}-${pkgver}.tar.xz")
md5sums=('1a0367a01dacaf0e91464e6fa54891fa')

build() {
  cd "${srcdir}/${pkgname}-${_pkgver}"
  
  ./configure --prefix=/usr \
       --with-zlib \
       --disable-guile \
       --disable-static \
       --without-idn \
       --enable-local-libopts
  make 
}

check() {
  cd "${srcdir}/${pkgname}-${_pkgver}"
  
  make check
}

package() {
  cd "${srcdir}/${pkgname}-${_pkgver}"
  
  make DESTDIR="${pkgdir}" install 
}

