
pkgname=less
pkgver=468
pkgrel=1
pkgdesc="Terminal based program for viewing text files"
license=('GPL3')
arch=('x86_64')
url="http://www.greenwoodsoftware.com/less"
depends=('glibc' 'ncurses' 'pcre')
groups=('base')
source=("http://www.greenwoodsoftware.com/less/$pkgname-$pkgver.tar.gz")
md5sums=('ebaeed479369ff5b8d331381363a9c13')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  ./configure --prefix=/usr --sysconfdir=/etc --with-regex=pcre
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  
  make DESTDIR=${pkgdir} install
}
