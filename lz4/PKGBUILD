
pkgname=lz4
pkgver=1.8.1.2
epoch=1
pkgrel=1
pkgdesc='Lossless compression algorithm, providing compression speed at 400 MB/s per core, scalable with multi-cores CPU.'
arch=('x86_64')
url='http://lz4.github.io/lz4/'
license=('GPL2')
depends=('glibc')
source=("https://github.com/lz4/lz4/archive/v${pkgver}.tar.gz")
md5sums=('343538e69ba752a386c669b1a28111e2')

build() {
  cd ${pkgname}-${pkgver}

  make PREFIX=/usr
}

package() {
  cd ${pkgname}-${pkgver}

  make install PREFIX=/usr MANDIR=/usr/share/man/man1 DESTDIR=${pkgdir}
}
