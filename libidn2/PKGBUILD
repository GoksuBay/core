
pkgname=libidn2
pkgver=2.1.1
pkgrel=1
pkgdesc="Implementation of the IDNA2008 + TR46 specifications"
url="https://www.gnu.org/software/libidn/#libidn2"
arch=('x86_64')
license=('GPL3' 'LGPL')
depends=('libunistring')
makedepends=('pkgconfig')
options=('!libtool')
source=("https://ftp.gnu.org/gnu/libidn/${pkgname}-${pkgver}.tar.gz")
md5sums=('3d33249c75bef1a25c04063ad7f5f983')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make 
}

check() {

  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install 
}
