
pkgname=dialog
pkgver=1.3_20160126
_pkgver=1.3-20160126
pkgrel=1
pkgdesc="A tool to display dialog boxes from shell scripts"
arch=('x86_64')
url="http://invisible-island.net/dialog/"
license=('LGPL2.1')
depends=('ncurses' 'sh')
# version at http://invisible-island.net/dialog/CHANGES.html
source=("ftp://invisible-island.net/dialog/${pkgname}-${_pkgver}.tgz")
md5sums=('d10ecf2b4ee83c78df9cc3b610a4301e')

build() {
  cd $pkgname-${_pkgver}
  
  ./configure --prefix=/usr --mandir=/usr/share/man --with-ncursesw --enable-nls
  make 
}

package() {
  cd $pkgname-${_pkgver}
  
  make DESTDIR=${pkgdir} install install-lib
}
