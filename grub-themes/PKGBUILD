
pkgname=grub-theme-midna
_pkgname=midna
pkgver=1.1
pkgrel=1
pkgdesc="Midna Grub-theme, based on Monochrome-light."
url="http://kaosx.us"
arch=('x86_64')
license=('GPL' 'CC-SA')
depends=('grub-common')
install=grub-themes.install
source=("http://sourceforge.net/projects/kaosx/files/sources/grub-themes/${pkgname}-${pkgver}.tar.xz")
md5sums=('3497f8ecfb87e342d40aee10d671ea83')
 
package() {
  cd "${srcdir}"
  
  install -dm755 "$pkgdir/usr/share/grub/themes"
  cp -dpr --no-preserve=ownership "${_pkgname}" "${pkgdir}/usr/share/grub/themes"
}
