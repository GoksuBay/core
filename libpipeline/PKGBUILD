
pkgname=libpipeline
pkgver=1.4.2
pkgrel=1
pkgdesc="C library for manipulating pipelines of subprocesses in a flexible and convenient way"
arch=('x86_64')
url="http://libpipeline.nongnu.org/"
license=('GPL')
groups=('base')
depends=('glibc')
options=('!libtool')
source=("https://download.savannah.gnu.org/releases/libpipeline/${pkgname}-${pkgver}.tar.gz")
md5sums=('d5c80387eb9c9e5d089da2a06e8a6b12')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make -k check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir}/ install
}
