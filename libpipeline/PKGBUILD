
pkgname=libpipeline
pkgver=1.5.0
pkgrel=1
pkgdesc="C library for manipulating pipelines of subprocesses in a flexible and convenient way"
arch=('x86_64')
url="http://libpipeline.nongnu.org/"
license=('GPL')
groups=('base')
depends=('glibc')
options=('!libtool')
source=("https://download-mirror.savannah.gnu.org/releases/libpipeline/${pkgname}-${pkgver}.tar.gz")
md5sums=('b7437a5020190cfa84f09c412db38902')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make -k check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir}/ install
}
