
pkgname=bc
pkgver=1.06.95
pkgrel=1
pkgdesc="An arbitrary precision calculator language"
arch=('x86_64')
url="http://www.gnu.org/software/bc/"
license=('GPL')
depends=('readline')
install=bc.install
source=("ftp://alpha.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
	'bc-1.06-void.patch')
md5sums=('5126a721b73f97d715bb72c13c889035'
         'fe85d42dd4151801e9b8c2d2c4d990bf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p0 -i "${srcdir}/bc-1.06-void.patch"
  
  ./configure --prefix=/usr --mandir=/usr/share/man \
    --infodir=/usr/share/info --with-readline 
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make DESTDIR="${pkgdir}" install 
}
