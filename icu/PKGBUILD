
pkgname=icu
pkgver=60.2
_pkgver=60_2
pkgrel=1
pkgdesc="International Components for Unicode library"
arch=('x86_64')
url="http://www.icu-project.org/"
license=('custom:"icu"')
depends=('gcc-libs' 'sh')
source=("https://ssl.icu-project.org/files/icu4c/${pkgver}/${pkgname}4c-${_pkgver}-src.tgz")
sha512sums=('8e718e66c13e7f25714404c46b91ed6305efff1df70c328be2ec743023a7719016dae72a5fa0a05d6f5599983590a2044ff72d3453a048d987ab546d0416d694')

build() {
  cd icu/source
  # fix Malayalam encoding https://bugzilla.redhat.com/show_bug.cgi?id=654200
  #patch -Rp3 -i ${srcdir}/icu.8198.revert.icu5431.patch
  # http://bugs.icu-project.org/trac/changeset/39484
  #patch -p4 -i ${srcdir}/keyword-list.diff
  
  ./configure --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man
  make 
}

check() {
  cd icu/source
  
  make -k check 
}

package() {
  cd icu/source
  make -j1 DESTDIR=${pkgdir} install 

  install -Dm644 ../LICENSE ${pkgdir}/usr/share/licenses/icu/LICENSE
}
