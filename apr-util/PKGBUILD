
pkgname=apr-util
pkgver=1.6.0
pkgrel=1
pkgdesc="The Apache Portable Runtime"
arch=('x86_64')
url="https://apr.apache.org/"
depends=('apr' 'gdbm' 'expat' 'db' 'libldap' 'unixodbc')
options=('!libtool')
license=('APACHE')
source=("https://www.apache.org/dist/apr/apr-util-${pkgver}.tar.bz2")
md5sums=('069a9a980776acab05212c5f37ef8368')

build() {
  cd apr-util-${pkgver}
  ./configure --prefix=/usr \
    --with-apr=/usr \
    --without-pgsql \
    --without-mysql \
    --without-sqlite2 \
    --without-sqlite3 \
    --with-berkeley-db=/usr \
    --with-gdbm=/usr \
    --with-ldap
  make
}

package() {
  cd apr-util-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
