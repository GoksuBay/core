
pkgname=libgcrypt
pkgver=1.7.5
pkgrel=1
pkgdesc="GNU's basic cryptographic library"
arch=('x86_64')
url="http://www.gnupg.org"
license=('LGPL')
depends=('libgpg-error')
options=('!libtool' 'emptydirs')
source=("ftp://ftp.gnupg.org/gcrypt/libgcrypt/${pkgname}-${pkgver}.tar.bz2")
md5sums=('74c8b4b2118946dcbfec5ff1cbf97177')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-padlock-support --disable-static
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
