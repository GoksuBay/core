
pkgname=efibootmgr
pkgver=0.8.0
pkgrel=1
pkgdesc="Tool to modify UEFI Firmware Boot Manager Variables."
arch=('x86_64')
url="https://github.com/vathpela/efibootmgr"
license=('GPL2')
depends=('zlib' 'pciutils' 'efivar')
options=('strip' 'purge' 'docs' 'zipman' '!emptydirs')
source=("https://github.com/vathpela/efibootmgr/archive/${pkgname}-${pkgver}.tar.gz")
md5sums=('4b481b9dd78c9b71a4ccd1acd572ea89')

build () {	
	cd ${srcdir}/${pkgname}-${pkgname}-${pkgver}/
	
	echo	
	CFLAGS= make
	echo
}


package() {
        cd ${srcdir}/${pkgname}-${pkgname}-${pkgver}/
        
        install -d "${pkgdir}/usr/bin/"
        install -d "${pkgdir}/usr/share/man/man8/"
	
	install -D -m0755 ${srcdir}/${pkgname}-${pkgname}-${pkgver}/src/efibootmgr/efibootmgr ${pkgdir}/usr/sbin/efibootmgr
	install -D -m644 ${srcdir}/${pkgname}-${pkgname}-${pkgver}/src/man/man8/efibootmgr.8 ${pkgdir}/usr/share/man/man8/efibootmgr.8
}
