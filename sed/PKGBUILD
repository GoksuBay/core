
# rebuild libtool on any update

pkgname=sed
pkgver=4.6
pkgrel=1
pkgdesc="GNU stream editor"
arch=('x86_64')
url="https://www.gnu.org/software/sed"
license=('GPL3')
groups=('base')
depends=('acl' 'sh')
makedepends=('gettext')
source=("https://ftp.gnu.org/gnu/sed/sed-${pkgver}.tar.xz")
md5sums=('a72a4f045a04681f18d7889924d53b8e')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

