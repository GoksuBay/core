
# rebuild libtool on any update

pkgname=sed
pkgver=4.5
pkgrel=1
pkgdesc="GNU stream editor"
arch=('x86_64')
url="https://www.gnu.org/software/sed"
license=('GPL3')
groups=('base')
depends=('acl' 'sh')
makedepends=('gettext')
source=("https://ftp.gnu.org/gnu/sed/sed-${pkgver}.tar.xz")
md5sums=('ade8f8c2c548bf41f74db2dcfc37e4e3')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}

