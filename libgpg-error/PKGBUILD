
pkgname=libgpg-error
pkgver=1.25
pkgrel=1
pkgdesc="Support library for libgcrypt"
arch=('x86_64')
url="http://www.gnupg.org"
license=('LGPL')
depends=('glibc' 'sh')
options=('!libtool')
source=("ftp://ftp.gnupg.org/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2")
md5sums=('d9fa545922a5060cbfbd87464bc31686')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make 
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}


package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install 
}

