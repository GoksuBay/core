
pkgname=libgpg-error
pkgver=1.23
pkgrel=2
pkgdesc="Support library for libgcrypt"
arch=('x86_64')
url="http://www.gnupg.org"
license=('LGPL')
depends=('glibc' 'sh')
options=('!libtool')
source=("ftp://ftp.gnupg.org/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2")
md5sums=('5bc2d7ec28f91f883fb6f23d5c784ca7')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make 
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}


package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install 
}

