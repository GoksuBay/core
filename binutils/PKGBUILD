# toolchain build order: linux-api-headers->glibc->binutils->gcc->binutils->glibc

pkgname=binutils
pkgver=2.31.1
pkgrel=1
pkgdesc="A set of programs to assemble and manipulate binary and object files"
arch=('x86_64')
url="https://www.gnu.org/software/binutils/"
license=('GPL')
groups=('base-devel')
depends=('glibc>=2.28' 'zlib')
checkdepends=('dejagnu' 'bc')
options=('!libtool' '!distcc' '!ccache')
source=("https://sourceware.org/pub/binutils/releases/binutils-${pkgver}.tar.xz")
sha512sums=('0fca326feb1d5f5fe505a827b20237fe3ec9c13eaf7ec7e35847fd71184f605ba1cefe1314b1b8f8a29c0aa9d88162849ee1c1a3e70c2f7407d88339b17edb30')

prepare() {
  cd binutils-${pkgver}
  
  # libiberty configure tests 
  sed -i "/ac_cpp=/s/\$CPPFLAGS/\$CPPFLAGS -O2/" libiberty/configure
}

build() {
  mkdir -p binutils-build
  cd binutils-build

  ../binutils-${pkgver}/configure \
    --prefix=/usr \
    --with-lib-path=/usr/lib:/usr/local/lib \
    --with-bugurl=https://github.com/KaOSx/core/issues \
    --enable-ld=default \
    --enable-gold \
    --with-pic \
    --enable-plugins \
    --enable-threads \
    --enable-shared \
    --disable-werror \
    --disable-multilib \
    --disable-gdb

  make configure-host

  make tooldir=${pkgdir}/usr
}

check() {
  cd ${srcdir}/binutils-build

  # check log files
  make LDFLAGS="" -k check || true
}

package() {
  cd binutils-build
  make prefix=${pkgdir}/usr tooldir=${pkgdir}/usr install

  rm ${pkgdir}/usr/share/man/man1/{dlltool,windres,windmc}*
  rm ${pkgdir}/usr/lib/lib{bfd,opcodes}.so
}
