
pkgname=gzip
pkgver=1.5
pkgrel=1
pkgdesc="GNU compression utility"
arch=('x86_64')
url="http://www.gnu.org/software/gzip/"
license=('GPL3')
groups=('base')
depends=('glibc' 'bash')
makedepends=('patch')
install=gzip.install
source=("ftp://ftp.gnu.org/pub/gnu/gzip/gzip-${pkgver}.tar.xz"
        'yes_no.patch')
md5sums=('2a431e169b6f62f7332ef6d47cc53bae'
         'd63249578de2eb6aadaded26918d8eed')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  patch -p1 -i $srcdir/yes_no.patch
  make 
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make prefix="${pkgdir}/usr" install
  
  install -dm755 ${pkgdir}/bin
  mv ${pkgdir}/usr/bin/{gunzip,gzip,uncompress,zcat} ${pkgdir}/bin/ 
  ln -sf ${pkgdir}/bin/${pkgname} ${pkgdir}/bin/compress

  cd "${pkgdir}/bin"
  ln -sf "${pkgname}" compress
}

