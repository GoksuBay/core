
pkgname=gzip
pkgver=1.9
pkgrel=1
pkgdesc="GNU compression utility"
arch=('x86_64')
url="https://www.gnu.org/software/gzip/"
license=('GPL3')
groups=('base')
depends=('glibc' 'bash')
makedepends=('patch' 'less')
source=("https://ftp.gnu.org/gnu/gzip/gzip-${pkgver}.tar.xz")
md5sums=('9492c6ccb2239ff679a5475a7bb543ed')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make 
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr install
}

